<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/primaryShrinePink">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/secondaryShrinePink"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/text_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Employee name."
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/text_date_of_birth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="DateOfBirth : YYYY/MM/DD"
                    android:textColor="@color/black"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="87dp" />

                <TextView
                    android:id="@+id/text_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:textColor="@color/black" />

                <RadioGroup
                    android:id="@+id/radio_group_vehicle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="horizontal"
                    android:padding="10dp">


                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:gravity="top"
                        android:text="VEHICLE   :   "
                        android:textColor="@color/black" />

                    <RadioButton
                        android:id="@+id/radio_car"
                        android:layout_width="92dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Car" />

                    <RadioButton
                        android:id="@+id/radio_motorCycle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="MotorCycle" />


                </RadioGroup>

                <RadioGroup
                    android:id="@+id/radio_group_employment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="horizontal"
                    android:padding="10dp">


                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:gravity="top"
                        android:text="EMPLOYMENT   :   "
                        android:textColor="@color/black" />

                    <RadioButton
                        android:id="@+id/radio_fulltime"
                        android:layout_width="92dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="FullTime" />

                    <RadioButton
                        android:id="@+id/radio_parttime"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="PartTime" />

                    <RadioButton
                        android:id="@+id/radio_intern"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Intern" />

                </RadioGroup>
            </com.google.android.material.textfield.TextInputLayout>

            <FrameLayout
                android:id="@+id/frame_layout_employment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></FrameLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>